<%= form_for @order do |f| %>

  <%= f.hidden_field :status, value: 'quoted' %>
  <%= f.label :equipment_size %>
  <br>
  <%= f.text_field :item_size %>
  <br>

  <%= f.label :surgeon %>
  <br>
  <%= f.text_field :surgeon %>
  <br>

  <%= f.label :surgery_date %>
  <br>
  <%= f.text_field :surgery_date %> (yyyy/mm/dd)
  <br>

  <%= f.label :delivery_date %>
  <br>
  <%= f.text_field :delivery_date %> (yyyy/mm/dd)
  <br>

  <%= f.label :health_fund %>
  <br>
  <%= f.text_field :health_fund %>
  <br>

  <%= f.label :time_of_posturing %>
  <br>
  <%= f.select :time_of_posturing, ['Please select','3-5 days', '1 week', '10 days', '2 weeks', '3 weeks', '4 weeks' ] %>
  <br>

  <%= f.label :any_health_problems? %>
  <br>
  <%= f.text_field :health_problems %>
  <br>

  <% if @current_user.technician? %>

  <%= f.label :status %>
  <br>
  <%= f.select :status, Order.statuses.keys.to_a %> 
  <br>

  <% end %>

  <%= f.submit %>

<% end %>
