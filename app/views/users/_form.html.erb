<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :user_type, :for => "exampleFormControlSelect1" %>
    <%= f.select :user_type, User.user_types.keys.to_a, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :full_name %>
    <%= f.text_field :name, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth %> (yyyy/mm/dd)
    <%= f.text_field :dob, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :contact_number %>
    <%= f.text_field :contact, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :type => "exampleInputEmail1", :class => "form-control" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :height %> (cm)
    <%= f.text_field :height, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :weight %> (kg)
    <%= f.text_field :weight, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => "form-control mb-4" %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.select :state, User.states.keys.to_a %>
  </div>

  <div class="form-group">
    <%= f.label :card_payment %>
    <%= f.text_field :card_payment, :class => "form-control mb-4" %>
  </div>

  <%= f.submit 'Submit', :class => "btn btn-info btn-block my-4" %>

<% end %>
